<?xml version="1.0" encoding="utf-8"?>
<!-- shape定義形狀，shape="rectangle"表示形状為長方形 -->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- 設框内填充颜色 -->
    <solid android:color="#9E8367" />

    <!-- 設邊寬框度和颜色 -->
<!--    <stroke-->
<!--        android:width="3dp"-->
<!--        android:color="#918c7a" />-->
    <!-- 設圆角半径 -->
<!--    <corners android:radius="2dp" />-->
    <!-- 設邊距 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
    <!-- 射漸變角度angle和漸變颜色 -->
<!--    <gradient-->
<!--        android:angle="270"-->
<!--        android:endColor="#FFFF782"-->
<!--        android:startColor="#13C7AF" />-->

    <!-- 設各邊倒角大小(角度) -->
    <corners
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp" />
<!--    <color-->
<!--        android:textColorHint="#918c7a"/>-->
</shape>
