<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRevealLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:dragEdge="right"
    app:mode="same_level">

    <!--    <View-->
    <!--        android:layout_width="300dp"-->
    <!--        android:layout_height="1dp"-->
    <!--        android:layout_marginLeft="135dp"-->
    <!--        android:layout_marginTop="68dp"-->
    <!--        android:background="@color/check_color" />-->

    <!-- Your secondary layout here -->
    <LinearLayout
        android:id="@+id/layout_introduction"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="說明"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/check_color"
            android:textStyle="bold"
            android:background="#DFDCD2"/>
    </LinearLayout>

    <!-- Your main layout here -->
    <RelativeLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_list"
        android:clickable="true"
        android:padding="10dp">

        <View
            android:layout_width="1dp"
            android:layout_height="158dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="15dp"
            android:background="@color/check_color" />

        <ImageView
            android:id="@+id/iv_coffee"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:src="@color/brown" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_coffee"
            android:text="xxx咖啡"
            android:textColor="@color/check_color"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="156dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/iv_coffee"
            android:text="$"
            android:textColor="#b3a995"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/iv_coffee"
            android:text="60元"
            android:textColor="#b3a995"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/iv_coffee"
            android:src="@drawable/coffee_beans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/iv_coffee"
            android:text="產地"
            android:textSize="18dp"
            android:textStyle="bold" />
        <!--        android:textColor="#b3a995"-->
        <TextView
            android:id="@+id/coffeeBeans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/iv_coffee"
            android:text="咖啡豆產地"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@+id/iv_coffee"
            android:src="@drawable/calories" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/iv_coffee"
            android:text="熱量"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/iv_coffee"
            android:text="100大卡"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="121dp"
            android:layout_toRightOf="@+id/iv_coffee"
            android:src="@drawable/ic_coffeine_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@id/iv_coffee"
            android:text="咖啡因"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/caffeine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@id/iv_coffee"
            android:text="100毫克"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="150dp"
            android:layout_toRightOf="@+id/iv_coffee"
            android:src="@drawable/coffee_roasting3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="150dp"
            android:layout_toRightOf="@id/iv_coffee"
            android:text="烘焙程度"
            android:textSize="18dp"
            android:textStyle="bold" />
        <!--        android:textColor="#b3a995"-->
        <TextView
            android:id="@+id/coffee_roasting3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="150dp"
            android:layout_toRightOf="@id/iv_coffee"
            android:text="淺焙"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>
