<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="25dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="組合名稱"
            android:textSize="30dp"
            android:textStyle="bold" />

        <View
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_below="@+id/name"
            android:layout_marginTop="0dp"
            android:background="@color/gray" />

    </RelativeLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/coffee" />

    <TextView
        android:id="@+id/coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="75dp"
        android:text="飲料"
        android:textSize="25dp"
        android:textColor="@color/check_color"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/iv_temp"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_below="@+id/coffee"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/temp_7" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coffee"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/iv_temp"
        android:text="溫度"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/iv_sweet"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_below="@+id/coffee"
        android:layout_marginStart="65dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/iv_temp"
        android:src="@drawable/sweet_7" />

    <TextView
        android:id="@+id/sweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coffee"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/iv_sweet"
        android:text="甜度"
        android:textSize="20dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/coffee"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/iv_temp"
        android:backgroundTint="#ABA8A1"
        android:text="加入"
        android:textColor="#f5f5f5"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>