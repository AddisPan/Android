<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frg_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_information">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mtoolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B3A995"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="會員功能"
                    android:textColor="#F5F5F5"
                    android:textSize="35dp"
                    android:textStyle="bold"/>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="700dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_customer">

                    <ImageView
                        android:id="@+id/iv_recommend"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="240dp"
                        android:layout_marginTop="80dp" />

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="185dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/mark_good" />

                    <RelativeLayout
                        android:layout_width="155dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/mark"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="3dp"
                            android:text="為您推薦"
                            android:textColor="@color/white"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="400dp"
                        android:layout_height="162dp"
                        android:layout_alignRight="@+id/iv_recommend"
                        android:layout_alignBottom="@+id/iv_recommend"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="11dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="-32dp"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/recommendProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="product"
                            android:textColor="@color/check_color"
                            android:textSize="35dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/recommendTempIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/recommendProduct"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="18dp"
                            android:src="@drawable/ic_temp_5" />

                        <!--                        <TextView-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_below="@+id/recommendProduct"-->
                        <!--                            android:layout_marginLeft="5dp"-->
                        <!--                            android:layout_marginTop="18dp"-->
                        <!--                            android:layout_toRightOf="@+id/recommendTemp"-->
                        <!--                            android:text="/"-->
                        <!--                            android:textColor="@color/check_color"-->
                        <!--                            android:textSize="20dp" />-->

                        <TextView
                            android:id="@+id/recommendTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recommendProduct"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="18dp"
                            android:layout_toEndOf="@+id/recommendTempIcon"
                            android:text="temperature"
                            android:textColor="@color/check_color"
                            android:textSize="22dp" />

                        <ImageView
                            android:id="@+id/recommendSweetIcon"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_below="@+id/recommendProduct"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="15dp"
                            android:layout_toEndOf="@+id/recommendTemp"
                            android:src="@drawable/ic_sweet_5" />

                        <TextView
                            android:id="@+id/recommendSweet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recommendProduct"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="18dp"
                            android:layout_toEndOf="@+id/recommendSweetIcon"
                            android:text="sweet"
                            android:textColor="@color/check_color"
                            android:textSize="22dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="108dp"
                            android:text="$"
                            android:textColor="#E05B47"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recommendPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recommendProduct"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="60dp"
                            android:text="price"
                            android:textColor="@color/check_color"
                            android:textSize="22dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <!--                <ImageView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="100dp"-->
                <!--                    android:layout_marginTop="260dp"-->
                <!--                    android:background="@drawable/line2" />-->


                <RelativeLayout
                    android:id="@+id/relative_new"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="270dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_customer">

                    <ImageView
                        android:id="@+id/iv_new"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="240dp"
                        android:layout_marginTop="80dp" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/mark_new"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="185dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/mark_new" />

                    <RelativeLayout
                        android:layout_width="155dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/mark"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="3dp"
                            android:text="最新商品"
                            android:textColor="@color/white"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="400dp"
                        android:layout_height="162dp"
                        android:layout_alignRight="@+id/iv_new"
                        android:layout_alignBottom="@+id/iv_new"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="11dp"
                        android:layout_marginRight="-35dp"
                        android:layout_marginBottom="-36dp"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/newProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="-5dp"
                            android:text="product"
                            android:textColor="@color/check_color"
                            android:textSize="35dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/newTempIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/newProduct"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_temp_10" />

                        <TextView
                            android:id="@+id/newTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/newProduct"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_toEndOf="@+id/newTempIcon"
                            android:text="temperature"
                            android:textColor="@color/check_color"
                            android:textSize="22dp" />

                        <!--                        <TextView-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_below="@+id/newProduct"-->
                        <!--                            android:layout_marginLeft="5dp"-->
                        <!--                            android:layout_marginTop="20dp"-->
                        <!--                            android:layout_toRightOf="@+id/newTemp"-->
                        <!--                            android:text="/"-->
                        <!--                            android:textColor="@color/check_color"-->
                        <!--                            android:textSize="20dp" />-->

                        <ImageView
                            android:id="@+id/newSweetIcon"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_below="@+id/newProduct"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="18dp"
                            android:layout_toEndOf="@+id/newTemp"
                            android:src="@drawable/ic_sweet_10" />

                        <TextView
                            android:id="@+id/newSweet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/newProduct"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="21dp"
                            android:layout_toEndOf="@+id/newSweetIcon"
                            android:text="sweet"
                            android:textColor="@color/check_color"
                            android:textSize="22dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="98dp"
                            android:text="$"
                            android:textColor="#E05B47"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/newPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/newProduct"
                            android:layout_marginLeft="49dp"
                            android:layout_marginTop="62dp"
                            android:text="price"
                            android:textColor="@color/check_color"
                            android:textSize="22dp" />
                    </RelativeLayout>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@+id/relative_new"
                    android:layout_marginTop="50dp"
                    android:background="@color/check_color" />

                <TextView
                    android:id="@+id/tv_listTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_new"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="31dp"
                    android:background="#F6F6F6"
                    android:text="商品清單"
                    android:textColor="@color/check_color"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rev_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_listTitle"
                    android:layout_marginTop="20dp" />
            </RelativeLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>