<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRevealLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="same_level">

    <!-- Your secondary layout here -->
    <LinearLayout
        android:id="@+id/layout_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_garbage" />
    </LinearLayout>

    <!-- Your main layout here -->
    <RelativeLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bg_shoppingcar">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="110dp"
            android:layout_height="114dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/coffee_infor_1" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/img_product"
            android:text="產品名稱"
            android:textColor="@color/check_color"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_temp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/img_product"
            android:src="@drawable/ic_temp_5" />

        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/iv_temp"
            android:layout_toRightOf="@+id/img_product"
            android:text="溫度"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_sweet"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_below="@+id/tv_name"
            android:layout_marginStart="7dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/tv_temp"
            android:layout_toRightOf="@+id/tv_temp"
            android:src="@drawable/ic_sweet_10" />

        <TextView
            android:id="@+id/tv_sweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="365dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/iv_sweet"
            android:layout_toRightOf="@+id/tv_temp"
            android:text="甜度"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_quantity"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_temp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/img_product" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_temp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/spinner_quantity"
            android:text="NT$  "
            android:textColor="#B3A995"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_temp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/spinner_quantity"
            android:text="$價格"
            android:textColor="#B3A995"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>