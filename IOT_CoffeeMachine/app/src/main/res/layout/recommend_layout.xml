<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DFDCD2">

            <ImageView
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_marginLeft="-0dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/retangle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_coffee" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="92dp"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="40dp" />
                <!--                android:src="@drawable/bg_shoppingcar"-->

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gif_good"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="135dp"
                    android:src="@drawable/mark_good"/>



                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/giphy" />

                <!--                <pl.droidsonroids.gif.GifImageView-->
                <!--                    android:layout_width="230dp"-->
                <!--                    android:layout_height="300dp"-->
                <!--                    android:layout_alignParentTop="true"-->
                <!--                    android:layout_marginLeft="45dp"-->
                <!--                    android:layout_marginTop="-15dp"-->
                <!--                    android:src="@drawable/recommend_main" />-->
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_coffee"
                android:layout_width="115dp"
                android:layout_height="150dp"
                android:layout_marginTop="150dp"
                android:src="@drawable/coffee1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:text="greeting"
                android:textSize="25dp"
                android:textColor="@color/check_color"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/iv_coffee"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/dialogProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="35dp"
                android:text="美式"
                android:textColor="@color/check_color"
                android:textSize="36dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_coffee" />

            <TextView
                android:id="@+id/dialogTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:text="正常冰"
                android:textColor="@color/check_color"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dialogProduct" />

<!--                        <TextView-->
<!--                            android:id="@+id/slash"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginLeft="5dp"-->
<!--                            android:layout_marginTop="65dp"-->
<!--                            android:layout_toRightOf="@+id/dialogTemp"-->
<!--                            android:text="/"-->
<!--                            android:textColor="@color/check_color"-->
<!--                            android:textSize="25dp"-->
<!--                            android:textStyle="bold"-->
<!--                            app:layout_constraintStart_toEndOf="@+id/dialogTemp"-->
<!--                            app:layout_constraintTop_toBottomOf="@+id/iv_coffee" />-->

            <TextView
                android:id="@+id/dialogSweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/dialogTemp"
                android:text="正糖"
                android:textColor="@color/check_color"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/dialogTemp"
                app:layout_constraintTop_toBottomOf="@+id/dialogProduct" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="43dp"
                android:text="$ "
                android:textColor="#FA3F24"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/dialogSweet"
                app:layout_constraintTop_toBottomOf="@+id/dialogProduct" />

            <TextView
                android:id="@+id/dialogPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginRight="22dp"
                android:text="60"
                android:textColor="#FA3F24"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dialogSweet"
                app:layout_constraintTop_toBottomOf="@+id/dialogProduct"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:text="杯數"
                android:textColor="@color/check_color"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/dialogSweet"
                app:layout_constraintTop_toBottomOf="@+id/iv_coffee"/>

            <Spinner
                android:id="@+id/dialogQuantity"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="100dp"
                app:layout_constraintStart_toEndOf="@+id/dialogSweet"
                app:layout_constraintTop_toBottomOf="@+id/iv_coffee"
                android:entries="@array/quantity_value"/>

            <Button
                android:id="@+id/btn_send"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#ABA8A1"
                android:textColor="#f2f2e9"
                android:text="請先放好杯子再送出"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dialogTemp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>