<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicInformation"
    android:background="#F6F6F6">

    <TextView
        android:id="@+id/basicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="基本資料"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#918C7A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/nickname"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="暱稱:"
        android:textSize="22dp"
        android:textStyle="bold"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basicTitle"
        android:textColorHint="#918C7A"
        android:background="@drawable/bg_edittext"
        android:theme="@style/EditTextTheme"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_edittext"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickname">

        <TextView
            android:id="@+id/genderTitle"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="-5dp"
            android:text="性別:"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#918C7A"/>

        <RadioGroup
            android:id="@+id/genderGroup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toEndOf="@+id/tv_gender"
            app:layout_constraintTop_toBottomOf="@+id/name">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#918C7A"
                android:buttonTint="@color/check_color"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="女"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="#918C7A"
                android:buttonTint="@color/check_color"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_edittext"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/birthdayTitle"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="-5dp"
            android:text="生日:"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#918c7A"/>

        <TextView
            android:id="@+id/birthday"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="尚未選擇生日"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#918c7A"
            app:layout_constraintStart_toEndOf="@+id/tv_birth"
            app:layout_constraintTop_toBottomOf="@+id/rg_gender" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_edittext"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/allergen"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="-5dp"
            android:text="過敏原:"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#918c7a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_birth" />

        <CheckBox
            android:id="@+id/milk"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="牛奶"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#918c7a"
            app:layout_constraintStart_toEndOf="@+id/tv_allergen"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            android:buttonTint="@color/check_color"/>

        <CheckBox
            android:id="@+id/sugar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="糖"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#918c7a"
            app:layout_constraintStart_toEndOf="@+id/cb_milk"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            android:buttonTint="@color/check_color"/>
    </LinearLayout>

    <Button
        android:id="@+id/previous"
        android:layout_width="125dp"
        android:layout_height="65dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#ABA8A1"
        android:text="上一步"
        android:textColor="#f5f5f5"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <Button
        android:id="@+id/finish"
        android:layout_width="125dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#ABA8A1"
        android:text="完成註冊"
        android:textColor="#f5f5f5"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/previous"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="藍芽Address"
        android:textSize="25dp"
        android:textColor="#918c7a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.236"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previous" />

</androidx.constraintlayout.widget.ConstraintLayout>